{
  "name": "ubvision",
  "version": "2.0.0",
  "main": "dist-electron/main/index.js",
  "description": "Electron Vite React boilerplate.",
  "author": "wilr.zhang <1239271010@qq.com>",
  "license": "MIT",
  "private": true,
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
    }
  },
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "*.json,.{eslintrc,prettierrc}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{ejs,html,md,yml,css,less}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "pree2e": "vite build --mode=test",
    "e2e": "playwright test",
    "electron": "NODE_ENV=development electron .",
    "build": "tsc && vite build && electron-builder",
    "win": "npm run build && electron-builder --windows"
  },
  "dependencies": {
    "@xyflow/react": "^12.3.2",
    "antd": "^5.21.6",
    "axios": "^1.7.7",
    "axios-mock-adapter": "^2.1.0",
    "base-64": "^1.0.0",
    "electron-updater": "^6.1.8",
    "less": "^4.2.0",
    "less-loader": "^12.2.0",
    "lodash-es": "^4.17.21",
    "moment": "^2.30.1",
    "react-router": "^6.27.0",
    "react-router-dom": "^6.27.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/base-64": "^1.0.2",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "productName": "UBVision",
    "appId": "com.ubsense.ubvision",
    "asar": true,
    "asarUnpack": [
      "**\\*.{node,dll}",
      "../node_modules/node-notifier/**/*"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://43.138.71.42:7080/build/",
        "publishAutoUpdate": true
      }
    ],
    "mac": {
      "icon": "public/app-mac.icns",
      "target": {
        "target": "default",
        "arch": [
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "public/logo.png",
      "artifactName": "UBVisionSetup-${version}.exe",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "public/app.icns",
      "target": [
        "AppImage",
        "tar.gz",
        "deb",
        "snap"
      ],
      "artifactName": "${productName}-${os}-${arch}-${version}-setup.${ext}",
      "maintainer": "ubv",
      "category": "Development"
    },
    "nsis": {
      "shortcutName": "UBVision",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "extraResources": [
      "./public/**"
    ]
  }
}
